
@model List<DemoDotNet5.ViewModel.ProductViewModel>


<div class="container p-3">
    <div class="row pt-4">
        <h2 class="text-dark">Product List</h2>
    </div>

    <br /><br />

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Price</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>
                        <img src="~/images/@obj.NameImage" alt="" width="100" height="100" asp-append-version="true" />
                    </td>
                    <td>@obj.Price</td>
                    <td>@obj.CategoryName</td>
                    <td>
                        <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-success">Edit</a>
                        <a onclick="return confirm('Arey you sure ?')" asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a class="btn btn-primary" asp-controller="Product" asp-action="Create">
            Insert
        </a>
    </div>
</div>

