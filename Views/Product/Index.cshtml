
@model List<DemoDotNet5.ViewModel.ProductViewModel>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-8">
            <h2 class="text-dark">Product List</h2>
        </div>
        <div class="col-4">
            <div class="form-group">
                <form asp-action="Index" method="get">
                    <div class="input-group">
                        <input type="text" name="SearchString" class="form-control" placeholder="Search Product Name">
                        <div class="input-group-append">
                            <button class="btn btn-secondary" type="submit">
                                Search
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <br /><br />

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Price</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        @if (Model.Count > 0)
        {
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>
                        <img src="~/images/@obj.ImageName" alt="" width="100" height="100" asp-append-version="true" />
                    </td>
                    <td>@obj.Price</td>
                    <td>@obj.CategoryName</td>
                    <td>
                        <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-success">Edit</a>
                        <a onclick="return confirm('Arey you sure ?')" asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }

            }
            else
            {
                <p>No Product exist </p>
            }
        </tbody>
    </table>
    <div>
        <a class="btn btn-primary" asp-controller="Product" asp-action="Create">
            Insert
        </a>
    </div>
</div>

